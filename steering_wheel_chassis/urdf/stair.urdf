<?xml version="1.0"?>
<robot name="heavy_stair">

  <link name="stair_base_link">
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <mass value="50.0" />
      <inertia
        ixx="1.6667" ixy="0.0" ixz="0.0"
        iyy="1.6667" iyz="0.0"
        izz="0.8333" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="1.2 1.2 0.2" />
      </geometry>
      <material name="stair_material">
        <color rgba="1.0 0.0 0.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="1.2 1.2 0.2" />
      </geometry>
    </collision>
  </link>

  <!-- 如果需要，可以添加Gazebo属性 -->
  <gazebo reference="stair_base_link">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>